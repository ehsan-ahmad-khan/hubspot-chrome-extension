{
  "manifest_version": 3,
  "name": "EchoPath Batch Caller",
  "version": "1.0.0",
  "description": "Queue HubSpot contacts for AI-powered batch calling",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.hubspot.com/*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.hubspot.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}